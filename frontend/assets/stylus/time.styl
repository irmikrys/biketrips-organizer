@import 'variables.styl';
@import "theme.styl"

.m-time
  color color-white
  padding-top 20px

  .showtime
    text-align center

  .separater
    display inline-block
    font-size 20px
    font-weight bold
    color theme_dark
    width 15px
    height 30px
    line-height 65px
    text-align center

  .time-text
    position relative
    font-size 12px
    color theme_dark
    margin-top 5px
    margin-bottom 2px

  .sliders
    padding 0 15px

  .time
    width 30px
    height 30px
    display inline-block
    font-size 20px
    line-height 30px
    background-color theme_dark
    border-radius 3px
    text-align center
