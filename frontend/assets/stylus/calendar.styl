@import 'variables'
@import 'theme.styl'

.m-calendar
  display flex
  align-content center
  align-self center

  table
    width 100%
    border-collapse collapse
    border-spacing 0
    table-layout fixed

  td
    padding 3px 0
    text-align center
    cursor pointer
    color color-gray
    border 1px solid color-gray

  thead
    td
      color theme_dark
      font-size 11px
      font-weight 700
      text-transform none

  tbody td
    color #666666

    &:hover
      background theme_dark
      border-color theme_dark
      color color-white

  .current-day
    color white
    background-color theme_light
    font-weight bold

  .prev-month,
  .next-month
    color #999999

  .toolbar
    line-height 30px
    color theme_dark
    text-align center
    margin-bottom 13px

    button
      position relative
      width 20px
      height 30px
      line-height 30px
      color #ffffff
      border 1px solid theme_dark
      background theme_dark
      font-size 14px
      padding 0
      text-align center
      outline 0
      z-index 1
      cursor pointer

    .prev-month
      float left

    .next-month
      float right

    .current-date
      color theme_dark
