.edit-modal
  position fixed
  padding-top 20px
  top 0
  left 0
  right 0
  max-width 800px
  z-index 10
  background #ffffff
  align-content center

  h3
    background-color theme_dark
    color #ffffff
    padding 15px
    padding-left 30px

  .glyphicon
    float right
    font-size 20px
    margin-top 15px
    margin-right 15px
    color #ffffff

  .glyphicon:hover
    cursor pointer

  .profile-view
    margin-top 4rem
    overflow-y auto
    min-height 370px

    div.column:nth-child(2)
      border-left 1px solid #c9c9c9

    @media (max-width: 720px)
      div.column:nth-child(2)
        border none

  .edit-form
    display table
    margin 0 auto
    padding-left 10%
    padding-right 10%

    input
      color #333

    button
      width 100%

#cover
  position fixed
  top 0
  left 0
  background rgba(0,0,0,0.5)
  z-index 5
  width 100%;
  height 100%
